# Protonest Plant Monitoring System - Environment Configuration
# Copy this file to .env in the project root and fill in your credentials

# ============================================
# API Configuration
# ============================================

# Production Backend
VITE_API_BASE_URL=https://protonest-connect-general-app.yellowsea-5dc9141a.westeurope.azurecontainerapps.io/api/v1/user

# Local Backend (for development)
# VITE_API_BASE_URL=http://localhost:8091/api/v1/user

# Use local API for development
VITE_USE_LOCAL_API=false

# ============================================
# Protonest Account Credentials
# ============================================

# Your Protonest account email
VITE_USER_EMAIL=ratnaabinayan@gmail.com

# Your Protonest secret key (obtained from device configuration)
# This is NOT your login password - it's the "secret key" from dashboard
# Example secret key format: 123456789
VITE_USER_PASSWORD=123456789

# ============================================
# Device Configuration
# ============================================

# Default device ID (can be changed in dashboard)
VITE_DEFAULT_DEVICE_ID=device0000

# ============================================
# Debug Settings
# ============================================

# Enable debug logs in console
VITE_DEBUG_LOGS=false

# ============================================
# WebSocket Configuration
# ============================================

# This is set in the code but can be overridden here if needed
# VITE_WS_BASE_URL=wss://protonest-connect-general-app.yellowsea-5dc9141a.westeurope.azurecontainerapps.io/ws

# ============================================
# Feature Flags
# ============================================

# Enable mock data mode (for testing without real API)
VITE_ENABLE_MOCK_MODE=false

# ============================================
# Development Credentials (optional - remove in production)
# ============================================

VITE_DEV_EMAIL=your-email@example.com
VITE_DEV_PASSWORD=your-password

# Development mode flag (automatically set by Vite)
# DEV=true
